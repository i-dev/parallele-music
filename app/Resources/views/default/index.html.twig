                    <img src="{{ asset('uploads/shop/123456.jpg') }}" style="width:70%; margin-bottom:10px;" class="img-responsive img-thumbnail"/>

                    <div class="col-xs-8" style="text-align:left; font-size:small;">
                        Yamaha YDP-142
                    </div>

                    <div class="col-xs-4" style="text-align:right; font-weight:bold;">
                        100 €
                    </div>



                </div>


            </div>
            {% endfor %}
        </div>

    </div>

    <div class="col-xs-4" style="background-color:#444; color:#ccc; border-top: 1px solid white; padding-bottom:10px; padding-top:10px;;">
        <ul class="list-unstyled">
            {% for i in 1..5 %}
            <li style="margin-bottom:10px;"><div class="label label-primary">21-06-2015</div> <br>
                <span style="font-size:small;"><a href="#" style="color:white;">Rendez-vous pour la fête de la musique !</a></span>
            </li>
            {% endfor %}
        </ul>

    </div>
</div>




{% endblock %}
